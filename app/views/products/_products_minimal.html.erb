<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th></th>
			<th>שם המוצר</th>
			<th>כמות</th>
		</tr>
	</thead>
	<tbody>
		<% products.each do |product| %>
			<tr>
				<td><input type="checkbox" class="was_bought_checkbox" id="<%= product.id %>" /></td>
				<td><%= product.title %></td>
				<td><%= measure_in_words(product.measure) %></td>
			</tr>
		<% end %>
	</tbody>
</table>