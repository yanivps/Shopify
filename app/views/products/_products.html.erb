<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>שם המוצר</th>
			<th>הערות</th>
			<th>כמות</th>
			<th>מבקש</th>
			<th>נוסף בתאריך</th>
			<th>תמונה</th>
		</tr>
	</thead>
	<tbody>
		<% products.each do |product| %>
			<tr>
				<td><%= product.title %></td>
				<td><%= product.description %></td>
				<td><%= measure_in_words(product.measure) %></td>
				<td><%= product.user.name %></td>
				<td><%= product.created_at.strftime("%d/%m/%Y %H:%M") %></td>
				<td><%= image_tag product.image.url if product.image? %></td>
			</tr>
		<% end %>
	</tbody>
</table>