<div class="preset">
	<div class="preset-header">
		<a href="#" class="preset-products-toggler"><span class="glyphicon glyphicon-plus light-black"></span></a>
		<h4 class="inline"><%= link_to preset.title, preset %></h4>
		<%= link_to "הוסף", add_to_list_shopping_list_preset_path(shopping_list, preset), class: "btn btn-success btn-sm", method: :post %>
	</div>
	<div class="preset-products hide">
		<table class="table table-striped table-condensed">
			<thead>
				<tr>
					<th>שם המוצר</th>
					<th>כמות</th>
				</tr>
			</thead>
			<tbody>
				<% preset.products.each do |product| %>
					<tr>
						<td><%= product.title %></td>
						<td><%= measure_in_words(product.measure) %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>